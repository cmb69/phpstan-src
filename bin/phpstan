#!/usr/bin/env php
<?php declare(strict_types=1);

function x ($i = 0) {
    var_dump($i);
    if ($i++ < 10) {
        x($i, new class ('test' . $i) {
            public $x;
            public $y = 6;

            public function __construct() {
                $this->x = new class () {
                    public $u = 10;
                };
            }
        });
    }
}

x();
